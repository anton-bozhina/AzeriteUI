<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

	<CheckButton name="CG_ActionButtonTemplate" virtual="true" >
		<Size>
			<AbsDimension x="36" y="36"/>
		</Size>

		<!-- Drop Shadow, Backdrop, Slot Texture, Icon, Icon Highlight and Flash -->
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Icon"/>
				<Texture parentKey="Flash" file="Interface\Buttons\UI-QuickslotRed" hidden="true"/>
			</Layer>
		</Layers>

		<!-- Frame hierachy -->
		<Frames>

			<!-- Cooldown -->
			<Cooldown inherits="CooldownFrameTemplate" parentKey="Cooldown">
				<Size x="36" y="36"/>
				<Anchors>
					<Anchor point="CENTER" x="0" y="-1"/>
				</Anchors>
				<SwipeTexture>
					<Color r="1" g="1" b="1" a="0.8"/>
				</SwipeTexture>
			</Cooldown>

			<!-- ChargeCooldown -->
			<Cooldown parentKey="ChargeCooldown" frameLevel="4">
			</Cooldown>

			<!-- Border -->
			<Frame parentKey="Border" frameLevel="5">

				<Layers>
				</Layers>

				<Frames>

					<!-- AutoCast -->
					<Frame parentKey="AutoCastShine" inherits="AutoCastShineTemplate">
						<Anchors>
							<Anchor point="CENTER" x="0" y="0"/>
						</Anchors>
						<Size x="28" y="28"/>

						<Layers>
							<Layer level="OVERLAY" textureSubLevel="1">
								<Texture parentKey="AutoCastableTexture" file="Interface\Buttons\UI-AutoCastableOverlay" hidden="true">
									<Size x="58" y="58"/>
									<Anchors>
										<Anchor point="CENTER" x="0" y="0"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
					</Frame>
				</Frames>

			</Frame>

			<!-- SpellHighlights -->
			<Frame parentKey="SpellHighlight" frameLevel="7" setAllPoints="true">
				<Layers>
					<Layer level="OVERLAY" textureSubLevel="1">
						<Texture parentKey="NewActionTexture" atlas="bags-newitem" useAtlasSize="false" alphaMode="ADD" hidden="true">
							<Size x="44" y="44"/>
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</Texture>
						<Texture parentKey="SpellHighlightTexture" atlas="bags-newitem" useAtlasSize="false" alphaMode="ADD" hidden="true">
							<Size x="44" y="44"/>
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
			</Frame>



			<!-- KeyBind, StackSize, Name, CooldownCount -->
			<Frame parentKey="Overlay" frameLevel="8" setAllPoints="true">

				<Layers>
					<Layer level="OVERLAY" textureSubLevel="1">
						<FontString inherits="NumberFontNormalSmallGray" parentKey="HotKey" justifyH="RIGHT">
							<Size x="36" y="10"/>
							<Anchors>
								<Anchor point="TOPLEFT" x="1" y="-3"/>
							</Anchors>
						</FontString>
						<FontString inherits="NumberFontNormal" parentKey="Count" justifyH="RIGHT">
							<Anchors>
								<Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
							</Anchors>
						</FontString>
						<FontString name="$parentName" parentKey="Name" inherits="GameFontHighlightSmallOutline">
							<Size x="36" y="10"/>
							<Anchors>
								<Anchor point="BOTTOM" x="0" y="2"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>

		</Frames>
		<Animations>
			<AnimationGroup parentKey="SpellHighlightAnim" looping="REPEAT">
				<Alpha childKey="SpellHighlightTexture" smoothing="OUT" duration=".35" order="1" fromAlpha="0" toAlpha="1"/>
				<Alpha childKey="SpellHighlightTexture" smoothing="IN" duration=".35" order="2" fromAlpha="1" toAlpha="0"/>
			</AnimationGroup>
		</Animations>

